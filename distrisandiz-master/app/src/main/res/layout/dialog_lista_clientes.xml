<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/layout_boton_redondeado_blanco">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:text="LISTA DE CLIENTES"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingStart="10dp"></TextView>
    <EditText
        android:id="@+id/editFiltroNombre"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:background="@drawable/layout_boton_redondeado_blanco"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="text"
        android:cursorVisible="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2sp"
        android:paddingStart="5sp"
        android:hint="Nombre del Cliente">
    </EditText>

    <ListView
        android:id="@+id/listViewClientes"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"></ListView>

    <Button
            android:id="@+id/btnCancelarCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Cancelar"
            android:textColor="@color/cardview_light_background"
            android:layout_gravity="center"
            android:background="@drawable/layout_boton_redondeado_red"></Button>
</LinearLayout>
