<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/layout_boton_redondeado_blanco"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo gasto"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold">
        </TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal">
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Ruta:"
                    android:layout_marginStart="4dp"
                    android:textSize="15dp"
                    android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/txtRutargt"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:textSize="15dp">

                    </TextView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="18dp"
                        android:clickable="true"
                        android:focusable="false"
                        android:inputType="date"
                        android:src="@drawable/ic_ruta_car"></ImageView>

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                    android:layout_marginStart="40dp"
                android:text="Fecha:"
                android:textSize="15dp"
                android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/txtFecharstx"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:textSize="13dp"></TextView>

                    <ImageButton
                    android:id="@+id/tb_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_boton_ventas"
                    android:src="@drawable/ic_calendario"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="false"
                    android:inputType="date"
                    ></ImageButton>


        </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Gastos:"
                android:textSize="15dp"
                android:textStyle="bold"></TextView>

            <AutoCompleteTextView
                android:id="@+id/Gastos2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:completionHint="                         ingrese un gasto"
                android:completionThreshold="1"
                android:hint="                         ingrese un gasto"></AutoCompleteTextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:text="Monto"
                android:textSize="15dp"
                android:textStyle="bold">

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:hint="$ 0.00"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:inputType="numberDecimal"
                    android:paddingTop="4dp">
                </EditText>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="false"
                    android:inputType="date"
                    android:src="@drawable/ic_monto"
                    ></ImageView>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnBuscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/layout_boton_redondeado"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:paddingStart="5dp"
                android:paddingEnd="2dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/ic_guardar"
                android:layout_weight="1">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:text="Guardar"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="10dp">
            </TextView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>