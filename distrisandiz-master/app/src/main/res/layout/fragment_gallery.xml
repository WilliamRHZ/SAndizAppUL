<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datos Generales"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#42A5F5"
            android:paddingBottom="8dp">
        </TextView>
        <EditText
            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:hint="Nombre"
            android:paddingStart="8dp"
            android:inputType="textPersonName">
        </EditText>
        <EditText
            android:id="@+id/txtApellidoPaterno"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:hint="Apellido Paterno"
            android:textSize="20sp"
            android:paddingStart="8dp"
            android:inputType="textPersonName">
        </EditText>
        <EditText
            android:id="@+id/txtApellidoMaterno"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="8dp"
            android:hint="Apellido Materno"
            android:textSize="20sp"
            android:paddingStart="8dp"
            android:inputType="textPersonName">
        </EditText>
        <LinearLayout
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_gravity="end"
            android:background="@drawable/layout_boton_redondeado">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_check">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text=" Guardar"
                android:layout_gravity="center"
                android:textSize="15sp">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10sp"
        android:paddingStart="8sp"
        android:paddingEnd="8sp"
        android:paddingBottom="8dp"
        android:orientation="vertical"
        android:background="@drawable/layout_boton_redondeado_blanco"
        android:layout_below="@+id/layout1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datos Cuenta"
            android:textColor="#42A5F5"
            android:textSize="20sp"
            android:gravity="center">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Correo Electrónico:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="12sp">
            </TextView>
            <TextView
                android:id="@+id/txtCoreoElectronico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8sp"
                android:text="usuario@correo.com"
                android:textColor="#000000"
                android:layout_marginStart="10sp"
                android:textSize="12dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Usuario:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="12dp">
            </TextView>
            <TextView
                android:id="@+id/txtRolUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rol Desconocido"
                android:textColor="#000000"
                android:layout_marginStart="10sp"
                android:textSize="12dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnContrasenia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="8dp"
            android:paddingEnd="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="end"
            android:background="@drawable/layout_boton_redondeado">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_security1">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="2dp"
                android:textColor="#ffffff"
                android:text=" Contraseña"
                android:layout_gravity="center"
                android:textSize="15sp">
            </TextView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>